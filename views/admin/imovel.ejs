<!DOCTYPE html>
<html lang="pt-br">

<head>

    <% include ../includes/headerPainel.ejs %>
    <title>Imóvel - Editar</title>

</head>

<body class="animsition">
    <!-- PAGE WRAPPER -->
    <div class="page-wrapper">
        
        <% include ../includes/headerMenus.ejs %>

        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">

            <!-- MAIN CONTENT-->
            <section class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="table-responsive m-b-40">
                                

                                <!-- CONTAINER -->
                                <div class="container">
                                    <% include ../includes/fineuploader.ejs %>
                                    <form action="/admin/imoveis/update/<%= imovel._id %>" method="POST">
                                        <div class="form-group">
                                            <label for="titulo">Título do anúncio:</label>
                                            <input type="text" name="titulo" id="titulo" class="form-control" value="<%= imovel.titulo %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="cep">Cep:</label>
                                            <input type="text" name="cep" id="cep" class="form-control" value="<%= imovel.cep %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="endereco">Endereço:</label>
                                            <input type="text" name="endereco" id="endereco" class="form-control" value="<%= imovel.endereco %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="valor">Valor:</label>
                                            <input type="number" name="valor" id="valor" class="form-control" value="<%= imovel.valor %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="condominio">Condominio:</label>
                                            <input type="number" name="condominio" id="condominio" class="form-control" value="<%= imovel.condominio %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="iptu">IPTU:</label>
                                            <input type="number" name="iptu" id="iptu" class="form-control" value="<%= imovel.iptu %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Modalidade:</label>
                                            <br>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isVenda" id="isVenda" value="true" <%= imovel.isVenda ? 'checked' : ''%> >Venda</label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isVenda" id="isVenda" value="false" <%= imovel.isVenda ? '' : 'checked'%> >Aluguel</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Oportunidade Única:</label>
                                            <br>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isOportunidade" id="isOportunidade" value="true" <%= imovel.isOportunidade ? 'checked' : ''%> >Sim</label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isOportunidade" id="isOportunidade" value="false" <%= imovel.isOportunidade ? '' : 'checked'%> >Não</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Destaque:</label>
                                            <br>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isDestaque" id="isDestaque" value="true" <%= imovel.isDestaque ? 'checked' : ''%> >Sim</label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label><input type="radio" name="isDestaque" id="isDestaque" value="false" <%= imovel.isDestaque ? '' : 'checked'%> >Não</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="select_tipo">Tipo:</label>
                                                <select name="tipo" class="form-control" id="select_tipo">
                                                    <option value="apartamento" <%= imovel.tipo==='apartamento' ? 'selected' : '' %> >Apartamento</option>
                                                    <option value="casa" <%= imovel.tipo==='casa' ? 'selected' : '' %> >Casa</option>
                                                    <option value="casa em condominio" <%= imovel.tipo==='casa em condominio' ? 'selected' : '' %> >Casa em Condomínio</option>
                                                    <option value="chacara" <%= imovel.tipo==='chacara' ? 'selected' : '' %> >Chácara</option>
                                                    <option value="cobertura" <%= imovel.tipo==='cobertura' ? 'selected' : '' %> >Cobertura</option>
                                                    <option value="empreendimento" <%= imovel.tipo==='empreendimento' ? 'selected' : '' %> >Empreendimento</option>
                                                    <option value="fazenda" <%= imovel.tipo==='fazenda' ? 'selected' : '' %> >Fazenda</option>
                                                    <option value="flat" <%= imovel.tipo==='flat' ? 'selected' : '' %> >Flat</option>
                                                    <option value="galpao" <%= imovel.tipo==='galpao' ? 'selected' : '' %> >Galpão</option>
                                                    <option value="garagem" <%= imovel.tipo==='garagem' ? 'selected' : '' %> >Garagem</option>
                                                    <option value="kitinete" <%= imovel.tipo==='kitinete' ? 'selected' : '' %> >Kitinete</option>
                                                    <option value="loja" <%= imovel.tipo==='loja' ? 'selected' : '' %> >Loja</option>
                                                    <option value="predio comercial" <%= imovel.tipo==='predio comercial' ? 'selected' : '' %> >Prédio Comercial</option>
                                                    <option value="sala comercial" <%= imovel.tipo==='sala comercial' ? 'selected' : '' %> >Sala Comercial</option>
                                                    <option value="salas conjuntos" <%= imovel.tipo==='salas conjuntos' ? 'selected' : '' %> >Salas/Conjuntos</option>
                                                    <option value="terreno" <%= imovel.tipo==='terreno' ? 'selected' : '' %> >Terreno</option>
                                                    <option value="outros" <%= imovel.tipo==='outros' ? 'selected' : '' %> >Outros</option>
                                                </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="select_procedencia">Procedência: </label>
                                            <select name="procedencia" class="form-control" id="select_procedencia">
                                                <option value="construcao" <%= imovel.procedencia==='construcao' ? 'selected' : '' %> >Em Construção</option>
                                                <option value="novo" <%= imovel.procedencia==='novo' ? 'selected' : '' %> >Novos / Prontos (1ª venda)</option>
                                                <option value="revenda" <%= imovel.procedencia==='revenda' ? 'selected' : '' %> >Pronto Revenda</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="select_bairro">Bairro:</label>
                                            <select name="bairro" class="form-control" id="select_bairro">
                                                <option value="aguas claras" <%= imovel.bairro==='aguas claras' ? 'selected' : '' %> >Aguas Claras</option>
                                                <option value="asa norte" <%= imovel.bairro==='asa norte' ? 'selected' : '' %> >Asa Norte</option>
                                                <option value="asa sul" <%= imovel.bairro==='asa sul' ? 'selected' : '' %> >Asa Sul</option>
                                                <option value="brazlandia" <%= imovel.bairro==='brazlandia' ? 'selected' : '' %> >Brazlândia</option>
                                                <option value="ceilandia" <%= imovel.bairro==='ceilandia' ? 'selected' : '' %> >Ceilândia</option>
                                                <option value="centro" <%= imovel.bairro==='centro' ? 'selected' : '' %> >Centro</option>
                                                <option value="cruzeiro" <%= imovel.bairro==='cruzeiro' ? 'selected' : '' %> >Cruzeiro</option>
                                                <option value="cruzeiro novo" <%= imovel.bairro==='cruzeiro novo' ? 'selected' : '' %> >Cruzeiro Novo</option>
                                                <option value="lago norte" <%= imovel.bairro==='lago norte' ? 'selected' : '' %> >Lago Norte</option>
                                                <option value="lago sul" <%= imovel.bairro==='lago sul' ? 'selected' : '' %> >Lago Sul</option>
                                                <option value="ponta negra" <%= imovel.bairro==='ponta negra' ? 'selected' : '' %> >Ponta Negra</option>
                                                <option value="samambaia" <%= imovel.bairro==='samambaia' ? 'selected' : '' %> >Samambaia</option>
                                                <option value="samambaia norte" <%= imovel.bairro==='samambaia norte' ? 'selected' : '' %> >Samambaia Norte</option>
                                                <option value="santa maria" <%= imovel.bairro==='santa maria' ? 'selected' : '' %> >Santa Maria</option>
                                                <option value="shin" <%= imovel.bairro==='shin' ? 'selected' : '' %> >Setor de Habitações Individuais Norte</option>
                                                <option value="smpw" <%= imovel.bairro==='smpw' ? 'selected' : '' %> >Setor de Mansões Park Way</option>
                                                <option value="setor fumal" <%= imovel.bairro==='setor fumal' ? 'selected' : '' %> >Setor Fumal</option>
                                                <option value="shvp" <%= imovel.bairro==='shvp' ? 'selected' : '' %> >Setor Habitacional Vincente Pires</option>
                                                <option value="noroeste" <%= imovel.bairro==='noroeste' ? 'selected' : '' %> >Setor Noroeste</option>
                                                <option value="sudoeste" <%= imovel.bairro==='sudoeste' ? 'selected' : '' %> >Setor Sudoeste</option>
                                                <option value="sig" <%= imovel.bairro==='sig' ? 'selected' : '' %> >SIG</option>
                                                <option value="sobradinho" <%= imovel.bairro==='sobradinho' ? 'selected' : '' %> >Sobradinho</option>
                                                <option value="taguatinga" <%= imovel.bairro==='taguatinga' ? 'selected' : '' %> >Taguatinga</option>
                                                <option value="vicente pires" <%= imovel.bairro==='vicente pires' ? 'selected' : '' %> >Vicente Pires</option>
                                                <option value="vila planalto" <%= imovel.bairro==='vila planalto' ? 'selected' : '' %> >Vila Planalto</option>
                                                <option value="zona industrial" <%= imovel.bairro==='zona industrial' ? 'selected' : '' %> >Zona Industrial</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="mPrivativo">Metros Privativos:</label>
                                            <input type="number" name="mPrivativo" id="mPrivativo" class="form-control" value="<%= imovel.mPrivativo %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="mTotal">Metros Total:</label>
                                            <input type="number" name="mTotal" id="mTotal" class="form-control" value="<%= imovel.mTotal %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="dormitorios">Dormitorios:</label>
                                            <input type="number" name="dormitorios" id="dormitorios" class="form-control" value="<%= imovel.dormitorios %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="suites">Suítes:</label>
                                            <input type="number" name="suites" id="suites" class="form-control" value="<%= imovel.suites %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="banheiros">Banheiros:</label>
                                            <input type="number" name="banheiros" id="banheiros" class="form-control" value="<%= imovel.banheiros %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="vagas">Vagas:</label>
                                            <input type="number" name="vagas" id="vagas" class="form-control" value="<%= imovel.vagas %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="descricao">Descrição:</label>
                                            <textarea class="form-control" name="descricao" id="descricao" value="<% imovel.descricao %>"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Gravar</button>
                                        <a class="btn btn-primary" href="/admin/imoveis">Voltar</a>
                                    </form>
                                </div>
                                <!-- END CONTAINER -->

                            </div>
                            <!-- END DATA TABLE-->

                        </div>
                    </div>
                </div>
            </section>
            <!-- END MAIN CONTENT-->

            <!-- COPYRIGHT-->
            <section class="p-t-60 p-b-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright © 2018 Plano Imóveis.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END COPYRIGHT-->
        </div>
        <!-- END PAGE CONTENT -->

    </div>
    <!-- END PAGE WRAPPER -->

    <% include ../includes/scriptPainel.ejs %>

</body>
</html>
