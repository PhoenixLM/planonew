<!DOCTYPE html>
<html lang="pt-br">

<head>

    <% include ../includes/headerPainel.ejs %>

    <!-- Title Page-->
    <title>Dashboard</title>

</head>

<body class="animsition">
    <!-- PAGE WRAPPER -->
    <div class="page-wrapper">

        <!-- HEADER DESKTOP-->
        <header class="header-desktop3 d-none d-lg-block">
            <div class="section__content section__content--p35">
                <div class="header3-wrap">
                    <div class="header__logo">
                        <a href="/cliente/painel">
                            <img src="/resources/plano-logo.png" alt="Plano Imóveis" />
                        </a>
                    </div>
                    <div class="header__navbar">
                        <ul class="list-unstyled">
                            <li>
                                <a href="/cliente/painel">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span class="bot-line"></span>Dashboard</a>
                            </li>
                            <li>
                                <a href="/cliente/boletos">
                                    <i class="fas fa-file"></i>
                                    <span class="bot-line"></span>Boletos</a>
                            </li>
                        </ul>
                    </div>
                    <style>
                    .plano-cliente-logout {
                        display: block;
                        color: #333;
                        padding: 15px 25px;
                        font-size: 14px;
                    }
                    .plano-cliente-logout a, .plano-cliente-logout i {
                        color: #fff;
                    }
                    .plano-cliente-logout a i{
                        line-height: 1;
                        margin-right: 20px;
                        font-size: 18px;
                        vertical-align: middle;
                    }
                    </style>
                    <div class="header__tool">
                        <div class="account-wrap">
                            <div class="plano-cliente-logout">
                                <a href="/login/logout">
                                    <i class="zmdi zmdi-power"></i>Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER DESKTOP-->

        <!-- HEADER MOBILE-->
        <header class="header-mobile header-mobile-2 d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="/cliente/painel">
                            <img src="/resources/plano-logo.png" alt="Plano Imóveis" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li>
                            <a href="/cliente/painel">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="bot-line"></span>Dashboard</a>
                        </li>
                        <li>
                            <a href="/cliente/boletos">
                                <i class="fas fa-file"></i>
                                <span class="bot-line"></span>Boletos</a>
                        </li>
                        <li>
                            <a href="/login/logout">
                                <i class="fas fa-power-off"></i>
                                <span class="bot-line"></span>Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE -->

        <!-- PAGE CONTENT-->
        <div class="page-content--bgf7">

            <!-- MAIN CONTENT-->
            <section class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row m-t-25">
                            <div class="table-responsive m-b-40">
                                <!-- DATA TABLE -->
                                <table class="table table-borderless table-data3">
                                        <thead class="blue-grey lighten-4">
                                            <tr>
                                                <th>ID</th>
                                                <th>VENCIMENTO</th>
                                                <th>VALOR</th>
                                                <th>OPÇÕES</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < boletos.length; i++) { %>
                                                <tr>
                                                    <td><%= boletos[i]._id %></td>
                                                    <td><%= boletos[i].vencimento %></td>
                                                    <td><%= boletos[i].valor %></td>
                                                    <td><a href="/cliente/boletos/file/<%= boletos[i]._id %>">Download</a></td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                <!-- END DATA TABLE-->
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END MAIN CONTENT-->
    
            <!-- COPYRIGHT-->
            <section class="p-t-60 p-b-20">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright © 2018 Plano Imóveis.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END COPYRIGHT-->
            
        </div>
        <!-- END PAGE CONTENT -->

    </div>
    <!-- END PAGE WRAPPER -->

    <% include ../includes/scriptPainel.ejs %>

</body>
</html>
